# RAV1E FAILS TO BUILD ON UBUNTU BIONIC
if [ "${VER}" != '18.04' ]; then
    pre_check_ver 'xiph/rav1e' '1' 'T'
    if build 'rav1e' 'p20230926'; then
        echo '$ Installing RustUp'
        curl -A "${user_agent}" -sSf --proto '=https' --tlsv1.2 'https://sh.rustup.rs' | sh -s -- -y &>/dev/null
        source "${HOME}"/.cargo/env
        if [ -f "${HOME}"/.zshrc ]; then
            source "${HOME}"/.zshrc
        else
            source "${HOME}"/.bashrc
        fi
        rm -fr "${HOME}"/.cargo/registry/index/* "${HOME}"/.cargo/.package-cache
        execute cargo install --version '0.9.24+cargo-0.73.0' cargo-c
        download 'https://github.com/xiph/rav1e/archive/refs/tags/p20230926.tar.gz' 'rav1e-p20230926.tar.gz'
        execute cargo cinstall --prefix="${workspace}"  \
                               --library-type=staticlib \
                               --crt-static             \
                               --release
        build_done 'rav1e' 'p20230926'
    fi
    ffmpeg_libraries+=('--enable-librav1e')
fi

