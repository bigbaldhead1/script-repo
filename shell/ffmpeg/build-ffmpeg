    download 'https://github.com/Kitware/CMake/releases/download/v3.25.2/cmake-3.25.2.tar.gz'
    execute ./configure --prefix="${workspace}" --parallel="${cpus}" -- -DCMAKE_USE_OPENSSL='OFF'
