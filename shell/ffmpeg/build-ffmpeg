    export CC=gcc CXX=g++
else
    fail_fn 'Please install "gcc" to start the build.'
fi

#
# SET C OPTIMIZATION FLAGS TO TUNE THE BUILD FOR THE SPECIFIC COMPUTER RUNNING THE SCRIPT
#

cflags_fn()
{
    export CFLAGS='-g -O3 -march=native -Wl,-s -Wl,-Bsymbolic -Wl,--gc-sections'
    export CXXFLAGS='-g -O3 -march=native'
}
cflags_fn

