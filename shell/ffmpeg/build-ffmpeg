    execute ./configure --prefix="$workspace" --parallel="$cpu_threads" --enable-ccache -- -DCMAKE_USE_OPENSSL=OFF
    execute make "-j$cpu_threads"
    execute make install
    execute make clean
    build_done 'cmake' "$g_ver"
fi

