    execute ./configure --prefix=/usr/local --enable-static --with-pic
    execute make "-j$cpu_threads"
    execute sudo make install
    execute make distclean
    execute libtool --finish "$workspace"/lib
    build_done 'libiconv' '1.17'
fi

