create_links_gcc_13_fn()
{
    list=(c++-13 cpp-13 g++-13 gcc-13 gcc-ar-13 gccgo-13 gcc-nm-13 gcc-ranlib-13 gcov-13 gcov-dump-13
          gcov-tool-13 gdc-13 gfortran-13 gm2-13 gnat-13 gnatbind-13 gnatchop-13 gnatclean-13 gnatkr-13
          gnatlink-13 gnatls-13 gnatmake-13 gnatname-13 gnatprep-13 go-13 gofmt-13 lto-dump-13)

    for i in ${list[@]}
    do
        sudo ln -fs "/usr/local/bin/x86_64-pc-linux-gnu-$i" "/usr/local/bin/$i"
        sudo chown 755 "/usr/local/bin/x86_64-pc-linux-gnu-$i" "/usr/local/bin/$i"
    done
}

