git_ver_fn 'gperftools/gperftools' '1' 'R'
g_ver="${g_ver//gperftools-/}"
if build 'gperftools' "$g_ver"; then
    download "https://github.com/gperftools/gperftools/releases/download/gperftools-$g_ver/gperftools-$g_ver.tar.gz"
    execute ./configure --prefix=/usr/local --disable-shared --enable-libunwind
    execute make "-j$cpu_threads"
    execute sudo make install
    execute make distclean
    build_done 'gperftools' "$g_ver"
fi

git_ver_fn 'facebook/zstd' '1' 'R'
g_ver="${g_ver#Zstandard v}"
if build 'zstd' "$g_ver"; then
    download "https://github.com/facebook/zstd/releases/download/v$g_ver/zstd-$g_ver.tar.gz"
    cd build/meson || exit 1
    execute meson setup build --prefix=/usr/local --buildtype=release --default-library=static --strip
    execute ninja "-j$cpu_threads" -C build
    execute sudo ninja "-j$cpu_threads" -C build install
    build_done 'zstd' "$g_ver"
fi

git_ver_fn 'madler/zlib' '1' 'R'
g_ver="${g_ver#zlib }"
if build 'zlib' "$g_ver"; then
    download "https://github.com/madler/zlib/releases/download/v$g_ver/zlib-$g_ver.tar.gz"
    execute ./configure --prefix=/usr
    execute make "-j$cpu_threads"
    execute sudo make install
    execute make distclean
    build_done 'zlib' "$g_ver"
fi

if build 'autoconf-v269' '2.69'; then
    download 'https://ftp.gnu.org/gnu/autoconf/autoconf-2.69.tar.xz'
    execute ./configure --prefix="$workspace" M4="$workspace"/bin/m4
    execute make "-j$cpu_threads"
    execute make install
    execute make distclean
    build_done 'autoconf-v269' '2.69'
fi

############################################################
##
##  GCC ( 11 | 12 | 13 )
##
##  BUILD SUCCESS RESULTS
##
##  DEBIAN 12      |  PASS
##  DEBIAN 11      |  UNKNOWN
##  DEBIAN 10      |  UNKNOWN
##
##  UBUNTU LUNAR   |  PASS
##  UBUNTU JAMMY   |  PASS
##  UBUNTU FOCAL   |  UNKNOWN
##  UBUNTU BIONIC  |  UNKNOWN
##
############################################################
##
##  GCC [ 11 ] NOTES
##
##  Debian Bookworm will not build the "ada" language for gcc-11, so it's disabled.
##  To date, I have not tested Debian Buster or Bullseye, so make changes as necessary.
##  Ubuntu seems to have no issue building the "ada" language, so it remains enabled.
##
##  GCC [ 12 | 13 ] NOTES
##
##  Debian and Ubuntu appears to have no issues building "ada"
##  language support on gcc 12 and 13 so it is enabled for both
##
############################################################

if [ "$OS" = 'Debian GNU/Linux' ]; then
    gcc_11_lang='c,brig,c++,d,fortran,go,lto,objc,obj-c++'
else
    gcc_11_lang='c,ada,brig,c++,d,fortran,go,lto,objc,obj-c++'
    export CC=gnatgcc
fi

if build 'gcc-11' '11.4.0'; then
    source_libs_gcc11_fn
    download 'https://ftp.gnu.org/gnu/gcc/gcc-11.4.0/gcc-11.4.0.tar.xz'
    execute autoreconf -fi
    execute sudo ./contrib/download_prerequisites
    mkdir builddir
    cd builddir || exit 1
    execute ../configure                          \
        --prefix="$install_dir"                   \
        --{build,host,target}=x86_64-pc-linux-gnu \
        --disable-assembly                        \
        --disable-nls                             \
        --disable-werror                          \
        --enable-bootstrap                        \
        --enable-checking=release                 \
        --enable-languages="$gcc_11_lang"         \
        --enable-lto                              \
        --enable-multilib                         \
        --enable-plugin                           \
        --enable-threads=posix                    \
        --program-prefix=x86_64-pc-linux-gnu-     \
        --program-suffix=-11                      \
        --with-gcc-major-version-only             \
        --with-isl=/usr/local                     \
        --with-libiconv-prefix="$workspace"       \
        --with-link-serialization=2               \
        --with-tune=generic                       \
        --with-target-system-zlib                 \
        --with-zstd=/usr/local                    \
        "$cuda_check"                             \
        --without-included-gettext
    printf "\n%s\n%s\n\n" \
        "$ Compiling gcc-11 with languages=$gcc_11_lang" \
        '$ This is going to take a while...'
    execute make "-j$cpu_threads"
    execute sudo make install-strip
    execute libtool --finish "$install_dir"/libexec/gcc/x86_64-pc-linux-gnu/11
    execute libtool --finish "$install_dir"/lib
    create_links_gcc_11_fn
    build_done 'gcc-11' '11.4.0'
fi

export CC=gnatgcc
if build 'gcc-12' '12.3.0'; then
    source_libs_gcc12_fn
    download 'https://ftp.gnu.org/gnu/gcc/gcc-12.3.0/gcc-12.3.0.tar.xz'
    execute autoreconf -fi
    execute sudo ./contrib/download_prerequisites
    mkdir builddir
    cd builddir || exit 1
    execute ../configure                          \
        --prefix="$install_dir"                   \
        --{build,host,target}=x86_64-pc-linux-gnu \
        --disable-assembly                        \
        --disable-nls                             \
        --disable-werror                          \
        --enable-bootstrap                        \
        --enable-checking=release                 \
        --enable-languages=all                    \
        --enable-lto                              \
        --enable-multilib                         \
        --enable-offload-defaulted                \
        --enable-plugin                           \
        --enable-threads=posix                    \
        --program-prefix=x86_64-pc-linux-gnu-     \
        --program-suffix=-12                      \
        --with-gcc-major-version-only             \
        --with-isl=/usr/local                     \
        --with-libiconv-prefix="$workspace"       \
        --with-link-serialization=2               \
        --with-tune=generic                       \
        --with-target-system-zlib                 \
        --with-zstd=/usr/local                    \
        "$cuda_check"                             \
        --without-included-gettext
    printf "\n%s\n%s\n\n" \
        '$ Compiling gcc-12 with languages=c,ada,c++,d,fortran,go,lto,objc,obj-c++' \
        '$ This is going to take a while...'
    execute make "-j$cpu_threads"
    execute sudo make install-strip
    execute libtool --finish "$install_dir"/libexec/gcc/x86_64-pc-linux-gnu/12
    execute libtool --finish "$install_dir"/lib
    create_links_gcc_12_fn
    build_done 'gcc-12' '12.3.0'
fi

if build 'gcc-13' '13.1.0'; then
    source_libs_gcc13_fn
    download 'https://ftp.gnu.org/gnu/gcc/gcc-13.1.0/gcc-13.1.0.tar.xz'
    execute autoreconf -fi
    execute sudo ./contrib/download_prerequisites
    mkdir builddir
    cd builddir || exit 1
    execute ../configure                          \
        --prefix="$install_dir"                   \
        --{build,host,target}=x86_64-pc-linux-gnu \
        --disable-assembly                        \
        --disable-nls                             \
        --disable-werror                          \
        --enable-bootstrap                        \
        --enable-checking=release                 \
        --enable-languages=all                    \
        --enable-lto                              \
        --enable-multilib                         \
        --enable-offload-defaulted                \
        --enable-plugin                           \
        --enable-threads=posix                    \
        --program-prefix=x86_64-pc-linux-gnu-     \
        --program-suffix=-13                      \
        --with-gcc-major-version-only             \
        --with-isl=/usr/local                     \
        --with-libiconv-prefix="$workspace"       \
        --with-link-serialization=2               \
        --with-tune=generic                       \
        --with-target-system-zlib                 \
        --with-zstd=/usr/local                    \
        "$cuda_check"                             \
        --without-included-gettext
    printf "\n%s\n%s\n\n" \
        '$ Compiling gcc-13 with languages=c,ada,c++,d,fortran,go,lto,m2,objc,obj-c++' \
        '$ This is going to take a while...'
    execute make "-j$cpu_threads"
    execute sudo make install-strip
    execute libtool --finish "$install_dir"/libexec/gcc/x86_64-pc-linux-gnu/13
    execute libtool --finish "$install_dir"/lib
    create_links_gcc_13_fn
    build_done 'gcc-13' '13.1.0'
fi

# LDCONFIG MUST BE RUN NEXT IN ORDER TO UPDATE FILE CHANGES
sudo ldconfig 2>/dev/null

