#!/bin/bash
clear

#
# MENU COLOR FUNCTIONS
#

green='\e[32m'
blue='\e[34m'
clear='\e[0m'
ColorGreen() { echo -ne "$green$1$clear"; }
ColorBlue() { echo -ne "$blue$1$clear"; }

#
# SHOW BANNER
#

function box_out_banner()
{
    input_char=$(echo "$@" | wc -c)
    line=$(for i in `seq 0 $input_char`; do printf "-"; done)
    tput bold
    line="$(tput setaf 3)${line}"
    space=${line//-/ }
    echo " ${line}"
    printf '|' ; echo -n "$space" ; printf "%s\n" '|';
    printf '| ' ;tput setaf 4; echo -n "$@"; tput setaf 3 ; printf "%s\n" ' |';
    printf '|' ; echo -n "$space" ; printf "%s\n" '|';
    echo " ${line}"
    tput sgr 0
}

#
# DOWNLOAD SCRIPTS
#

szip_release_fn() { bash <(curl -sSL https://7z.optimizethis.net); }
szip_beta_fn() { bash <(curl -sSL https://7z-beta.optimizethis.net); }
dl_tools_fn() { bash <(curl -sSL https://dl-tools.optimizethis.net); }
build_tools_fn() { bash <(curl -sSL https://build-tools.optimizethis.net); }
magick_fn() { bash <(curl -sSL https://magick.optimizethis.net) --build --latest; }
ffmpeg_fn() { bash <(curl -sSL https://build-ffmpeg.optimizethis.net) --build --enable-gpl-and-non-free --latest; }
go_fn() { bash <(curl -sSL https://go.optimizethis.net); }
gparted_fn() { bash <(curl -sSL https://gparted.optimizethis.net); }
deb_dl_fn() { bash <(curl -sSL https://download.optimizethis.net); }
video_fn() { bash <(curl -sSL https://players.optimizethis.net); }

box_out_banner 'Installer Script Menu'

main_menu()
{
    local answer
echo -ne "
$(ColorGreen '1)')  7-Zip Release v21.00
$(ColorGreen '2)')  7-Zip Beta v23.00
$(ColorGreen '3)')  cURL, WGET
$(ColorGreen '4)')  CMake, Meson, Ninja
$(ColorGreen '5)')  ImageMagick 7
$(ColorGreen '6)')  FFmpeg
$(ColorGreen '7)')  Golang
$(ColorGreen '8)')  GParted
$(ColorGreen '9)')  Debian Package Downloader
$(ColorGreen '10)') Video Players
$(ColorGreen '0)')  Exit
$(ColorBlue 'Choose an option:') "
    read answer
    case "$answer" in
        1)
            clear
            szip_release_fn
            clear
            main_menu
            ;;
        2)
            clear
            szip_beta_fn
            clear
            main_menu
            ;;
        3)
            clear
            dl_tools_fn
            clear
            main_menu
            ;;
        4)
            clear
            build_tools_fn
            clear
            main_menu
            ;;
        5)
            clear
            magick_fn
            clear
            main_menu
            ;;
        6)
            clear
            ffmpeg_fn
            clear
            main_menu
            ;;
        7)
            clear
            go_fn
            clear
            main_menu
            ;;
        8)
            clear
            gparted_fn
            clear
            main_menu
            ;;
        9)
            clear
            deb_dl_fn
            clear
            main_menu
            ;;
        10)
            clear
            video_fn
            clear
            main_menu
            ;;
        0)
            sudo rm "$0"
            clear
            exit 0
            ;;
        *)
            echo $red'Wrong option'$clear
            WrongCommand
            ;;
    esac
}

main_menu
